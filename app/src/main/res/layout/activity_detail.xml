<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_photo_detail"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/product_name_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/Medium_16dp"
                android:textStyle="bold"
                android:layout_margin="@dimen/default_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_photo_detail"
                tools:text="Nome Produto" />

            <TextView
                android:id="@+id/product_category_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Medium_16dp"
                android:textSize="12dp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/product_name_detail"
                app:layout_constraintStart_toStartOf="@+id/product_name_detail"
                app:layout_constraintTop_toBottomOf="@+id/product_name_detail"
                tools:text="categoria" />

            <TextView
                android:id="@+id/product_descripition_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="normal"
                android:layout_margin="@dimen/default_8dp"
                app:layout_constraintEnd_toEndOf="@+id/product_category_detail"
                app:layout_constraintStart_toStartOf="@+id/product_category_detail"
                app:layout_constraintTop_toBottomOf="@+id/product_category_detail"
                tools:text="desc goes here." />

            <TextView
                android:id="@+id/product_price_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/green"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="@dimen/Medium_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_descripition_detail"
                tools:text="Price: " />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/buy_label"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_price_detail" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>